
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="BeiDream">
    <meta name="author" content="BeiDream">
    <title>登陆</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <style>
        .divbox{ 
	top: 50%;  }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form class="form-horizontal  form-group-lg" action="@(Url.Action("Login", "Account"))?returnUrl=@ViewBag.ReturnUrl" method="POST">
                    <div class="form-group has-success">
                        <label class="col-md-3 control-label">租户名</label>
                        <div class="col-md-9 input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                            <input type="text" class="form-control" id="TenancyName" name="TenancyName" placeholder="租户名">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-md-3 control-label">用户名</label>
                        <div class="col-md-9 input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                            <input type="text" class="form-control" id="UsernameOrEmailAddress" name="UsernameOrEmailAddress" placeholder="用户名">
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="col-md-3 control-label">密码</label>
                        <div class="col-md-9 input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="rememberMe" name="rememberMe" value="True"> 记住我
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-9">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">登陆</button>
                        </div>
                    </div>
                </form>        
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</body>
</html>
